  <body>
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">
      <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">
      <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
      <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>
    <script>
   $( function () { $('#usertable').DataTable(); } );
</script>


<section >
  <div class="container pt-5 ">
    <div class="row mt-4 mb-4 ms-5 ">
      {{!-- <a href="/admin/add-user" class="btn btn-success ms-auto w-auto">Add User</a> --}}
    </div>
<table class="table mt-4 usertable" id="usertable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">Status</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>******</td>
       <td>
        {{#if status}}
        <p style="color: red;">{{this.status}}</p>
        {{else}}
                <p style="color: green;">unblock</p>
        {{/if}}
        <a class="btn btn-danger" href="/admin/block-user/?id={{this._id}}" onclick="return  confirm('Are you sure?')">Block</a>
        <a class="btn btn-success" href="/admin/unblock-user?id={{this._id}}" onclick="return  confirm('Are you sure?')">Unblock</a>
      
      </td>
      <td>
        <a class="btn btn-primary" href="/admin/edit-user/?name={{this.Name}}&email={{this.Email}}&phone={{this.phone}}&id={{this._id}}">Edit</a>
        <a class="btn btn-danger" href="/admin/delete-user?id={{this._id}}" onclick="return  confirm('Are you sure?')">Delete</a>
      
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  </div>
</section>

</main>