<main id="main" class="main">
  <section>
    <div class="container">
<table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Image</th>
                   <th scope="col">Product Name</th>
                   <th scope="col">Real Price</th>
                    <th scope="col">Offer Price</th>
                    <th scope="col">Add Offer</th>

                  </tr>
                </thead>
                <tbody>
                    {{#each products}}
                  <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width: 50px;height: auto;"></td>
                    <td>{{this.product_name}}</td>
                    <td  style="color: rgb(28, 28, 28);">${{this.product_price}}</td>
                    <td  style="color: green;"><span id="{{this._id}}">${{this.productoffer}}</span> </td>
                    <td><button class="btn btn-primary" onclick="addOffer('{{this._id}}')">Add Offer</button></td>

                  </tr>
                  {{/each}}
                  
                </tbody>
              </table>
    </div>
  </section>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script>
    function addOffer(proId){
        swal("Enter Your Offer Price :", {
  content: "input",
})
.then((value) => {
  console.log(value)
  $.ajax({
    url:'/admin/addoffer',
    data:{
      productId:proId,
      productOffer:value
    },
    type:'post',
    success:(response)=>{
      document.getElementById(proId).innerHTML='$'+value
    }
  })
});
    }
  </script>
</main>