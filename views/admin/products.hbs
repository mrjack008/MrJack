  <body>
  



<section >
  <div class="container pt-5 ">
    <div class="row mt-4 mb-4 ms-5 ">
      {{!-- <a href="/admin/add-user" class="btn btn-success ms-auto w-auto">Add User</a> --}}
    </div>
<table class="table mt-4 usertable" id="usertable">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Image</th>
      <th scope="col">Name </th>
      <th scope="col">Category</th>
      {{!-- <th scope="col">Description</th> --}}
      <th scope="col">Price</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{this.product_id}}</th>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
      <td>{{this.product_name}}</td>
      <td>{{this.product_categorie}}</td>
      {{!-- <td>{{this.product_description}}</td> --}}
      <td>{{this.product_price}}</td>
      <td>
        <a class="btn btn-primary" href="/admin/edit-product/?id={{this._id}}&name={{this.product_id}}">Edit</a>
        <a class="btn btn-danger" href="/admin/delete-product?id={{this._id}}" onclick="return  confirm('Are you sure?')">Delete</a>
      
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  </div>
</section>
    <script>
   $( function () { $('#usertable').DataTable(); } );
</script>
  </main>