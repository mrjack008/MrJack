    <script>
        function changeQuantity(cartId, proId, count,quantity,userId,max) {
            console.log(userId)
            console.log(max)
           q = parseInt(document.getElementById(proId).textContent)
           console.log(q)
             if(parseInt(count)==-1&&parseInt(q)==1||parseInt(q)==parseInt(max)){

             }
            else{$.ajax({
                url: '/change-quantity',
                data: {
                    cart: cartId,
                    product: proId,
                    count: count,
                    quantity:quantity,
                    user:userId
                },
                method: 'post',
                success: (response => {
                        if (count==1){
                             let count = $('#' + proId).html()

                        count = parseInt(count) + 1
                        $("#" + proId).html(count)
                        $('#total').html('$'+response.total)
                         $('#totals').html('$'+response.total)
                         
                        }
                        else{
                            
                        let count = $('#' + proId).html()

                        count = parseInt(count) - 1
                        $("#" + proId).html(count)

                                 
                        $('#total').html('$'+response.total)
                        $('#totals').html('$'+response.total)
                        }
                        console.log(response)
                       
                })
            })
            }
        }
    </script>
    <script>
        function deletepro(userid,name){
           console.log(userid)
          swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this Product",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    swal("Your Product has been deleted!", {
      icon: "success",
    });
     $.ajax({
                url: '/delete-pro',
                data: {
                    proid:userid
                },
                method: 'post',
                success: function() {
             
                document.getElementById(name).style.display = "none";
            
            }
            
        })
  } else {
    swal("Your Product is safe!");
  }
});
           
        }
