<body>
 

        <main class="main">
            <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
     

            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-9">
                                {{#if products}}
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        {{#each products}}
                                        
                                        <tr  id="{{this.product.product_id}}">
                                            
                                            <td class="product-col">
                                                <div class="product">
                                                    <figure class="product-media">
                                                        <a href="#">
                                                            <img src="/product-images/{{this.product._id}}.jpg"
                                                                alt="Product image">
                                                        </a>
                                                    </figure>

                                                    <h3 class="product-title">
                                                        <a href="#">{{this.product.product_name}}</a>
                                                    </h3><!-- End .product-title -->
                                                </div><!-- End .product -->
                                            </td>
                                             {{#if this.product.productoffer}}
                                             <td class="price-col">${{this.product.productoffer}}
                                                <p style="text-decoration: line-through;">${{this.product.product_price}}</p>
                                             </td>
                                             
                                     
                                             {{else}}
                                                    <td class="price-col">${{this.product.product_price}}</td>
                                             {{/if}}
                                            <td class="quantity-col">
                                                {{!-- <div class="cart-product-quantity">
                                                    <input type="number" id="configname" id="test" class="form-control"
                                                        oninput="changeQuantity('{{this._id}}','{{this.product._id}}',1)"
                                                        value="{{this.quantity}}" min="1"
                                                        max="{{this.product.available_quantity}}" step="1"
                                                        data-decimals="0" required>

                                                </div><!-- End .cart-product-quantity --> --}}
                                                <div class="cart-product-quantity d-flex">
                                                    <button
                                                        style="background-color: rgb(231, 231, 231) ;color:black;border: solid 1px black;"
                                                        id=""
                                                        onclick="changeQuantity('{{this._id}}','{{this.item}}',-1,'{{this.quantity}}','{{../user._id}}')"
                                                        class="">-</button>
                                                    <p class="px-3" id="{{this.item}}">{{this.quantity}}</p><button
                                                        style="background-color: rgb(231, 231, 231) ;color:black;border: solid 1px black;"
                                                        onclick="changeQuantity('{{this._id}}','{{this.item}}',1,'{{this.quantity}}','{{../user._id}}','{{this.product.available_quantity}}')">+</button>
                                                </div><!-- End .cart-product-quantity -->
                                            </td>
                                            <td class="total-col" ></td>
                                            <td class="remove-col"><a class="btn-remove icon-close" onclick="deletepro('{{this.item}}','{{this.product.product_id}}')" ></a></td>

                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table><!-- End .table table-wishlist -->
                               
                                
                            </div><!-- End .col-lg-9 -->
                            <aside class="col-lg-3">
                                <div class="summary summary-cart">
                                    <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->

                                    <table class="table table-summary">
                                        <tbody>
                                            <tr class="summary-subtotal">
                                                <td>Subtotal:</td>
                                                <td id="total">${{total}}</td>
                                            </tr><!-- End .summary-subtotal -->
                                            

                                           

                                            <tr class="summary-total">
                                                <td>Total:</td>
                                                <td id="totals">${{total}}</td>
                                            </tr><!-- End .summary-total -->
                                        </tbody>
                                    </table><!-- End .table table-summary -->

                                    <a href="/checkout"
                                        class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO CHECKOUT</a>
                                </div><!-- End .summary -->

                                <a href="category.html" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE
                                        SHOPPING</span><i class="icon-refresh"></i></a>
                            </aside><!-- End .col-lg-3 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
                 {{else}}
