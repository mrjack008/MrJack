    <script>
        function deletepro(userid,name){
           console.log(userid)
          
            $.ajax({
                url: '/delete-wish-pro',
                data: {
                    proid:userid
                },
                method: 'delete',
                success: function() {
             
                document.getElementById(name).style.display = "none";
            
            }
            
        })
        }
    </script>
    <script>
    function addToCart(proId){
        $.ajax({
            url:'/add-to-cart/'+proId,
            method:'get',
            success:(response)=>{
                if(response.status){
                    let count=$('#cart-count').html()
                    count=parseInt(count)+1
                    $("#cart-count").html(count)
                }
               
            }
        })
    }
</script>
